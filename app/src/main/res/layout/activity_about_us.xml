<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutUsActivity"
    android:background="@color/white">
    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="关于我们"/>
    <TextView
        android:id="@+id/tv_weather_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="数据涞源:"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_weather_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_weather_title"
        android:layout_marginTop="5dp"
        android:text="天气数据来源于和风天气"
        android:textColor="#666666"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_weather_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_weather"
        app:layout_constraintLeft_toLeftOf="@id/tv_weather_title"
        android:layout_marginTop="10dp"
        android:text="天气控件:"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_weather_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_weather_view_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_weather_title"
        android:layout_marginTop="5dp"
        android:text="天气动画参考借鉴FakeWeather，\n该项目github地址：https://github.com/li-yu/FakeWeather"
        android:textColor="#666666"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_database_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_weather_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="数据库:"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_database_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_weather_title"
        android:layout_marginTop="5dp"
        android:text="数据库使用Bmob云数据库作为数据存储"
        android:textColor="#666666"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_user_statistics_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_database"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="用户统计:"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_user_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_user_statistics_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_weather_title"
        android:layout_marginTop="5dp"
        android:text="用户统计使用友盟，且接入友盟厂商通道，使用离线推送"
        android:textColor="#666666"
        android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>