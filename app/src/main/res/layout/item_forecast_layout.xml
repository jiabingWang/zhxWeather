<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_weather"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/tv_tmp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_weather"
        app:layout_constraintLeft_toRightOf="@id/iv_weather"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tv_tmp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_weather"
        app:layout_constraintLeft_toLeftOf="@id/tv_tmp_min"/>
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_weather"
        app:layout_constraintTop_toBottomOf="@id/iv_weather"/>
</androidx.constraintlayout.widget.ConstraintLayout>